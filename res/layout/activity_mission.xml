<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:background="#FFDCDCDD"
    tools:context=".MemberMission" >
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#DCDCDD"
         >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:layout_margin="8dp"
            >
	         <Button
	             android:id="@+id/mission_back_btn"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="@string/Btn_back" 
	             android:background="@drawable/back"
	             android:textColor="#FFFFFF"
	             android:gravity="center"
	             android:paddingLeft="20dp"
	            
	             />
	         <TextView
	             android:id="@+id/mission_title"
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:text="Mission Title"
	             android:textAppearance="?android:attr/textAppearanceLarge"
	             android:gravity="center"
	             />
        </LinearLayout>
        
       
         <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            
            >
	        <ListView
	            android:id="@+id/mission_listView"
	            android:layout_width="fill_parent"
	            android:layout_height="500dp"
	            android:divider="@android:color/transparent"
  				android:dividerHeight="10.0sp"/>
	        
            <Button
                android:id="@+id/mission_add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF17489D"
                android:layout_marginBottom="5dp"
                android:text="Add"/>
            <Button
                android:id="@+id/mission_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF17489D"
                android:text="Submit"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#21AB38"
        android:orientation="vertical"
        >
         
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미션 목록"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_margin="5dp"
            />
        
        <ListView
            android:id="@+id/mission_history_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
        </ListView>
        
    </LinearLayout>
    
</LinearLayout>