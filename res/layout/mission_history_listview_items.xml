<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#FFFFFFFF"
    android:orientation="horizontal" >
    <TextView
       android:id="@+id/mission_history_textlist_items1"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_margin="5dp"
       android:background="#21AB38"
       android:layout_height="fill_parent"/>            
    <LinearLayout 
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:layout_height="fill_parent"
           android:orientation="vertical">
	        <TextView
	           android:id="@+id/mission_history_textlist_items2"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"/>        
			<TextView
	           android:id="@+id/mission_history_textlist_items3"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"/>
	</LinearLayout>
    <Button 
        android:id="@+id/mission_history_button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FF7FC270"
        android:layout_margin="5dp"
        android:text="Append"/>
</LinearLayout>
